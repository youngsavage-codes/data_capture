{
  "compilerOptions": {
    "target": "ES2020",                   // Set the ECMAScript target version
    "module": "CommonJS",                 // Specify module code generation
    "rootDir": "./src",                   // Root directory of input files
    "outDir": "./dist",                   // Directory to output compiled files
    "strict": true,                        // Enable strict type checking
    "esModuleInterop": true,               // Enable emit interoperability between CommonJS and ES Modules
    "skipLibCheck": true                   // Skip type checking of declaration files
  },
  "include": ["src/**/*"],                 // Include all .ts files in the src directory
  "exclude": ["node_modules"]              // Exclude node_modules from the compilation
}
